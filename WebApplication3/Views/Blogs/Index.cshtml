@model List<Blog>
@{
}

<h2 class="text-center mb-5">List Of Blogs</h2>

<div class="row mb-5">
	<div class="col">
		<a class="btn btn-primary" asp-controller="Blogs" asp-action="Create">New Blog</a>
	</div>
	<div class="col">
	</div>
</div>

<table class="table">
	<thead>
		<tr>
			<th>ID</th>
			<th>Title</th>
			<th>Author</th>
			<th>Excerpt</th>
			<th>Category</th>
			<th>CreatedDate</th>
			<th>Action </th>
		</tr>
	</thead>

	<tbody>
			@foreach (var blog in Model){
				<tr>
					<td>@blog.Id </td>
					<td>@blog.Title</td>
					<td>@blog.Author</td>
					<td>@blog.Excerpt</td>
					<td>@blog.Category</td>
					<td>@blog.CreatedDate.ToString("MM/dd/yyyy")</td>
					<td style="white-space:nowrap">
						<a class="btn btn-primary btn-sm" asp-controller="Blogs" asp-action="Edit"
					   asp-route-id="@blog.Id">Edit</a>
						<a class="btn btn-danger btn-sm" asp-controller="Blogs" asp-action="Delete"
					   asp-route-id="@blog.Id" onclick="return confirm('Are you sure?')">Delete</a>
				</td>
				</tr>
		}

	</tbody>
</table>
