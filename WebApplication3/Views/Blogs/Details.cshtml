@model Blog

<h2 class="text-center mb-5">Blog's Details</h2>

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <div class="row mb-3">
            <label class="col-sm-4 col-form-label">Id</label>
            <div class="col-sm-8">
                <span class="form-control-plaintext">@Model.Id</span>
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-4 col-form-label">Title</label>
            <div class="col-sm-8">
                <span class="form-control-plaintext">@Model.Title</span>
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-4 col-form-label">Author</label>
            <div class="col-sm-8">
                <span class="form-control-plaintext">@Model.Author</span>
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-4 col-form-label">Excerpt</label>
            <div class="col-sm-8">
                <span class="form-control-plaintext">@Model.Excerpt</span>
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-4 col-form-label">Category</label>
            <div class="col-sm-8">
                <span class="form-control-plaintext">@Model.Category</span>
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-4 col-form-label">CreatedDate</label>
            <div class="col-sm-8">
                <span class="form-control-plaintext">@Model.CreatedDate.ToString("MM/dd/yyyy")</span>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-4 d-grid">
                <a class="btn btn-outline-primary" asp-controller="Blogs" asp-action="Index" role="button">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</div>
